---
import "@fontsource/hind";
import "@fontsource/junge";
import "@fontsource-variable/nunito";
import Header from "../components/Header.astro";
import PlantView from "../components/PlantView.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Visualizador web de temperatura, humedad y calidad del aire de plantas por medio de sensores conectados a un ESp32. TecnologÃ­a IoT."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <PlantView plantName="Erizo de mar" />

    <slot />

    <style is:global>
      html {
        scroll-behavior: smooth;
        font-family:
          "Hind" system-ui,
          sans-serif;
      }

      body {
        background: rgba(255, 255, 255, 1);
      }
    </style>
  </body>
</html>
